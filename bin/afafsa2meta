#!/usr/bin/env python
#-*- coding: utf-8 -*-

import argparse
import stools.fafsaparser as FParser

def parse_arguments(args=None):
    parser = argparse.ArgumentParser("Convert an output FAFSA file from HiCAssembler into a Meta CSV")

    parser.add_argument('--fafsa', '-f',
                        help='The FAFSA file path as outputted by HiCAssembler',
                        required=True)
    
    return parser.parse_args(args)

def main(args):
    #need to call main function here
    #print(args.fafsa)
    #GFFParser.load_parse(args.trackFile, args.gene)
    FParser.loader(args.fafsa)



if __name__ == "__main__":
    args = parse_arguments()
    main(args)